<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.kimonic.utilsmodule.ui.NoScrollViewPager
        android:id="@+id/vp_act_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <com.kimonic.utilsmodule.ui.NaviButtonView
        android:id="@+id/nbv_act_home"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        app:colorSel="@color/colorBac"
        app:colorUnSel="@color/black"
        app:count="4"
        app:imagesSelArray="@array/imagesSelR"
        app:imagesUnSelArray="@array/imagesUnSelR"
        app:textArray="@array/textIdR">


    </com.kimonic.utilsmodule.ui.NaviButtonView>


</LinearLayout>