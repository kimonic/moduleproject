            <!--投资备注-->
            <LinearLayout style="@style/LinearLayoutStytleEditOldRecord">

                <TextView
                    style="@style/TextStyle001"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/touzibeizhu" />

                <TextView
                    android:id="@+id/tv_act_seeinvestrecorddetails_invest_mark"
                    style="@style/TextStyle001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    />
            </LinearLayout>



            <!--投资账号-->
            <LinearLayout style="@style/LinearLayoutStytleEditOldRecord">

                <TextView
                    style="@style/TextStyle001"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/touzizhanghao" />

                <TextView
                    android:id="@+id/tv_act_seeinvestrecorddetails_invest_acounts"
                    style="@style/TextStyle001"
                    android:layout_width="match_parent"
