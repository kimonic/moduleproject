<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kimonic.utilsmodule.ui.MTopBarView
        android:id="@+id/mtb_act_seeinvestrecorddetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorQianLan"
        app:centerText="@string/touzijiluxiangqing"
        app:leftImage="@drawable/xvector_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--投资平台-->
            <LinearLayout style="@style/LinearLayoutStytleEditOldRecord">

                <TextView
                    style="@style/TextStyle001"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/touzipingtai" />

                <TextView
                    android:id="@+id/tv_act_seeinvestrecorddetails_invest_plateform"
                    style="@style/TextStyle001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    />
            </LinearLayout>

            <!--投资金额-->
            <LinearLayout style="@style/LinearLayoutStytleEditOldRecord">

                <TextView
                    style="@style/TextStyle001"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/touzijine" />

                <TextView
                    android:id="@+id/tv_act_seeinvestrecorddetails_invest_amount"
                    style="@style/TextStyle001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    />
            </LinearLayout>


            <!--投资日期-->
            <LinearLayout style="@style/LinearLayoutStytleEditOldRecord">

                <TextView
                    style="@style/TextStyle001"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/touziriqi" />

                <TextView
                    android:id="@+id/tv_act_seeinvestrecorddetails_investdate"
                    style="@style/TextStyle001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    />
            </LinearLayout>

            <!--回款日期-->
            <LinearLayout style="@style/LinearLayoutStytleEditOldRecord">

                <TextView
                    style="@style/TextStyle001"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/huikuanriqi" />

                <TextView
                    android:id="@+id/tv_act_seeinvestrecorddetails_repaydate"
                    style="@style/TextStyle001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    />
            </LinearLayout>

