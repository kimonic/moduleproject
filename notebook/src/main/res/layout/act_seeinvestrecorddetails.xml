                    style="@style/TextStyle001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    />
            </LinearLayout>

            <!--固定年化收益-->
            <LinearLayout style="@style/LinearLayoutStytleEditOldRecord">

                <TextView
                    style="@style/TextStyle001"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gudingnianhuashouyi" />

                <TextView
                    android:id="@+id/tv_act_seeinvestrecorddetails_fixed_annual_income"
                    style="@style/TextStyle001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>


            <!--总收益-->
            <LinearLayout style="@style/LinearLayoutStytleEditOldRecord">

                <TextView
                    style="@style/TextStyle001"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/zongshouyi" />

                <TextView
                    android:id="@+id/tv_act_seeinvestrecorddetails_total_income"
                    style="@style/TextStyle001"
