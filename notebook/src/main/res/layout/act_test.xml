<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kimonic.utilsmodule.ui.MTopBarView
        android:id="@+id/mtb_act_test"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorQianLan"
        app:centerText="@string/ceshiyemian"
        app:leftImage="@drawable/xvector_back" />
    <Button
        android:id="@+id/bt_act_test"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="@string/ceshianniu"/>
    <TextView
        android:id="@+id/tv_act_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:gravity="center"/>

</LinearLayout>