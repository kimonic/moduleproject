<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBac"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="10dp"
            android:text="@string/dangqiandengluyognhuming" />

        <TextView
            android:id="@+id/tv_act_savedatadetails_current_user"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_act_savedatadetails_label"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/qingshurubaocunshuju" />

        <EditText
            android:id="@+id/et_act_savedatadetails_content"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:inputType="numberDecimal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/qingshurubaocunriqi" />

        <EditText
            android:id="@+id/et_act_savedatadetails_riqi"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:inputType="text"
            android:hint="@string/geshi"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_act_savedatadetails_save"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="@string/querenbaocun"
        />

</LinearLayout>