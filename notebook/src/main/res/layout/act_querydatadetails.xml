<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kimonic.utilsmodule.ui.MTopBarView
        android:id="@+id/mtb_act_querydatadetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorQianLan"
        app:centerText="@string/zichanchaxunxiangqing"
        app:leftImage="@drawable/xvector_back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_act_querydatadetails_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/qingshuruyaochaxunderiqi"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_act_querydatadetails_query"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/chaxun"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_act_querydatadetails_shengxu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBac"
            android:gravity="center"
            android:text="@string/riqishengxu"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_act_querydatadetails_jiangxu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="@string/riqijiangxu"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_act_querydatadetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorQianLan1"
        android:divider="@color/color_line"
        android:dividerHeight="5dp" />
</LinearLayout>