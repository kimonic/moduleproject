<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Lv_Ll_Memorandum_Query"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/Lv_Tv_Memorandum_Query_1"
            android:text="@string/biaoti" />

        <TextView
            android:id="@+id/lv_memorandum_query_title"
            style="@style/Lv_Tv_Memorandum_Query_2" />
    </LinearLayout>

    <LinearLayout style="@style/Lv_Ll_Memorandum_Query">

        <TextView
            style="@style/Lv_Tv_Memorandum_Query_1"
            android:text="@string/biaoqian" />

        <TextView
            android:id="@+id/lv_memorandum_query_flag"
            style="@style/Lv_Tv_Memorandum_Query_2" />
    </LinearLayout>


    <LinearLayout style="@style/Lv_Ll_Memorandum_Query">

        <TextView
            style="@style/Lv_Tv_Memorandum_Query_1"
            android:text="@string/riqi" />

        <TextView
            android:id="@+id/lv_memorandum_query_datee"
            style="@style/Lv_Tv_Memorandum_Query_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            style="@style/Lv_Tv_Memorandum_Query_1"
            android:text="@string/neirong" />

        <TextView
            android:id="@+id/lv_memorandum_query_content"
            style="@style/Lv_Tv_Memorandum_Query_2"
            android:paddingEnd="15dp"
            android:paddingStart="0dp"/>
    </LinearLayout>

</LinearLayout>