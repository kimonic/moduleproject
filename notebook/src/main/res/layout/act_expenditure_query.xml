<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kimonic.utilsmodule.ui.MTopBarView
        android:id="@+id/mtb_act_expenditure_query"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorQianLan"
        app:leftImage="@drawable/xvector_back"
        app:centerText="@string/chakanzhichujilu0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_act_expenditure_query_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="@string/shangyiyue"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_act_expenditure_query_current"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="2018年3月"
            android:textColor="@color/colorWhite"
            android:background="@color/colorQianLan"
            android:gravity="center"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/tv_act_expenditure_query_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="@string/xiayiyue"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_act_expenditure_query"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        />
    <TextView
        android:id="@+id/tv_act_expenditure_query_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:text="@string/meiyouchaxunshuju"
        android:gravity="center"
        android:visibility="gone"
        />


</LinearLayout>