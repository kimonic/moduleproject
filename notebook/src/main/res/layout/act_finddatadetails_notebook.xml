<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBac"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="10dp"
            android:text="@string/dangqiandengluyognhuming" />

        <TextView
            android:id="@+id/tv_act_finddatadetails_current_user"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/shuzhizongji" />

        <TextView
            android:id="@+id/tv_act_finddatadetails_total"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_act_finddatadetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:divider="#00000000"
        android:dividerHeight="5dp" />

</LinearLayout>