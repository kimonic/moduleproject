<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBac"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="10dp"
            android:text="@string/dangqiandengluyognhuming" />

        <TextView
            android:id="@+id/tv_act_comeparedatadetails_current_user"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_act_comeparedatadetails_shuzhizongji1"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            />

        <TextView
            android:id="@+id/tv_act_comeparedatadetails_shuzhizongji2"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_act_comeparedatadetails_shuzhizongji3"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            />

        <TextView
            android:id="@+id/tv_act_comeparedatadetails_shuzhizongji4"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGlobal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_act_comeparedatadetails_shuzhizongji5"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/zongchazhi" />

        <TextView
            android:id="@+id/tv_act_comeparedatadetails_shuzhizongji6"
            style="@style/TextStyleNoTopMargin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_act_comparedatadetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        />

</LinearLayout>