<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/title_toolbar" />
    <android.support.v4.widget.NestedScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_marginBottom="@dimen/border_padding_top_bottom" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <RelativeLayout android:id="@id/layout_money" android:visibility="gone" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/item_layout">
                <TextView android:textSize="27.0sp" android:textStyle="bold" android:id="@id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" />
            </RelativeLayout>
            <TextView android:textColor="@color/tv_color_main_text" android:gravity="center_vertical" android:id="@id/tv_account_name" android:background="@color/background_app" android:paddingLeft="@dimen/dp_15" android:layout_width="fill_parent" android:layout_height="@dimen/dp_28" android:text="固定资产" />
            <RelativeLayout style="@style/asset_item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_name" android:text="资产名称" style="@style/item_text_view_left" />
                <cn.cash360.tiger.widget.edittext.EditTextWithDel android:textColor="@color/text_view_black" android:id="@id/et_asset_name" android:layout_toRightOf="@id/tv_asset_name" android:inputType="text" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/asset_item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_num" android:text="初始数量" style="@style/item_text_view_left" />
                <cn.cash360.tiger.widget.edittext.EditTextWithDel android:id="@id/et_asset_num" android:layout_toRightOf="@id/tv_asset_num" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/asset_item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_amount" android:text="初始金额" style="@style/item_text_view_left" />
                <cn.cash360.tiger.widget.edittext.EditTextWithDel android:textColor="@color/amount_red" android:id="@id/et_asset_amount" android:layout_toRightOf="@id/tv_asset_amount" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout android:id="@id/rl_asset_unit_cost" style="@style/asset_item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_unit_cost" android:text="初始单价" style="@style/item_text_view_left" />
                <TextView android:textColorHint="@color/textColorGray" android:id="@id/et_asset_unit_cost" android:hint="点击自动计算单价" android:layout_toRightOf="@id/tv_asset_unit_cost" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/asset_item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_depreciation_init_month" android:text="初始折旧（含当月）" style="@style/item_text_view_left" />
                <EditText android:id="@id/et_depreciation_init_month" android:layout_marginRight="@dimen/dp_1" android:layout_toRightOf="@id/tv_depreciation_init_month" android:layout_alignParentRight="false" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/asset_item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_depreciation_month" android:text="折旧月限" style="@style/item_text_view_left" />
                <EditText android:id="@id/et_depreciation_month" android:layout_marginRight="@dimen/dp_1" android:layout_toLeftOf="@id/tv_month_name" android:layout_toRightOf="@id/tv_depreciation_month" android:layout_alignParentRight="false" style="@style/asset_item_edit_right" />
                <TextView android:textSize="@dimen/sp_16" android:textColor="@color/text_view_black" android:id="@id/tv_month_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="个月" android:layout_alignParentRight="true" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/asset_item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_depreciated_month" android:text="已折月数" style="@style/item_text_view_left" />
                <EditText android:id="@id/et_depreciated_month" android:layout_marginRight="@dimen/dp_1" android:layout_toLeftOf="@id/tv_monthed_name" android:layout_toRightOf="@id/tv_depreciated_month" android:layout_alignParentRight="false" style="@style/asset_item_edit_right" />
                <TextView android:textSize="@dimen/sp_16" android:textColor="@color/text_view_black" android:id="@id/tv_monthed_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="个月" android:layout_alignParentRight="true" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <include layout="@layout/include_layout_el_residuals_rate" />
            <include layout="@layout/include_layout_el_residuals_value" />
            <include layout="@layout/include_tally_remark_photo" />
            <cn.cash360.tiger.widget.AutoWrapViewGroup style="@style/AutoWrapViewGroupStyle">
                <include layout="@layout/layout_tv_date" />
                <include layout="@layout/layout_tv_payee" />
                <include layout="@layout/layout_tv_staff" />
                <include layout="@layout/layout_tv_branch" />
                <include layout="@layout/layout_tv_project" />
            </cn.cash360.tiger.widget.AutoWrapViewGroup>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <include layout="@layout/layout_bt_save" />
    </FrameLayout>
</LinearLayout>