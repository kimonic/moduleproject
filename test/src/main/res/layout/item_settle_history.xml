<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <View android:background="@color/background_app" android:layout_width="fill_parent" android:layout_height="@dimen/dp_10" />
    <RelativeLayout style="@style/item_layout.podo">
        <TextView android:id="@id/text_view_date" android:layout_marginTop="0.0dip" style="@style/item_text_secondary" />
        <TextView android:textColor="@color/blue" android:id="@id/tv_copy" android:background="@drawable/selector_item_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="撤销" android:layout_alignParentRight="true" />
        <TextView android:id="@id/text_view_id" android:layout_marginRight="@dimen/dp_20" android:layout_toLeftOf="@id/tv_copy" style="@style/item_text_secondary" />
    </RelativeLayout>
    <include layout="@layout/divide_line" />
    <RelativeLayout android:background="@color/white" android:paddingLeft="@dimen/dp_15" android:paddingRight="@dimen/dp_15" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/tv_color_aux_text" android:paddingTop="@dimen/dp_10" android:text="核算截止时间" style="@style/item_text_primary_min" />
        <TextView android:id="@id/tv_die_time" style="@style/item_text_right" />
    </RelativeLayout>
    <RelativeLayout android:background="@color/white" android:paddingLeft="@dimen/dp_15" android:paddingRight="@dimen/dp_15" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@id/tv_account_name" android:layout_marginBottom="@dimen/dp_10" android:text="相关账目：" style="@style/item_text_secondary" />
        <TextView android:textColor="@color/colorAccent" android:ellipsize="end" android:id="@id/tv_account" android:maxLines="1" android:layout_toRightOf="@id/tv_account_name" style="@style/item_text_secondary" />
    </RelativeLayout>
</LinearLayout>