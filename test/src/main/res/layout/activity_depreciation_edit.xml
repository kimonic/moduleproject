<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/background_app" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/title_toolbar" />
    <ScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <RelativeLayout android:id="@id/layout_money" android:visibility="gone" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/item_layout">
                <TextView android:textSize="27.0sp" android:textStyle="bold" android:id="@id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_name" android:text="名称" style="@style/item_text_view_left" />
                <TextView android:textColor="@color/text_view_black" android:id="@id/et_asset_name" android:layout_toRightOf="@id/tv_asset_name" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_amount" android:text="购置金额" style="@style/item_text_view_left" />
                <TextView android:textColor="@color/text_view_black" android:id="@id/et_asset_amount" android:layout_toRightOf="@id/tv_asset_amount" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_num" android:text="购置数量" style="@style/item_text_view_left" />
                <TextView android:textColor="@color/text_view_black" android:id="@id/et_asset_num" android:layout_toRightOf="@id/tv_asset_num" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_unit_cost" android:text="折旧月限" style="@style/item_text_view_left" />
                <TextView android:id="@id/tv_depreciation_total" android:layout_toRightOf="@id/tv_asset_unit_cost" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <View android:background="@color/background_app" android:layout_width="fill_parent" android:layout_height="@dimen/divide_height" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_sale_amount" android:text="折旧金额" style="@style/item_text_view_left" />
                <TextView android:id="@id/et_sale_amount" android:layout_toRightOf="@id/tv_sale_amount" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_handle_num" android:text="折旧数量" style="@style/item_text_view_left" />
                <TextView android:id="@id/et_handle_num" android:layout_toRightOf="@id/tv_handle_num" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_p_l" android:text="剩余月限" style="@style/item_text_view_left" />
                <TextView android:id="@id/et_p_l" android:layout_toRightOf="@id/tv_p_l" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <include layout="@layout/include_tally_remark_photo" />
            <cn.cash360.tiger.widget.AutoWrapViewGroup style="@style/AutoWrapViewGroupStyle">
                <include layout="@layout/layout_tv_date" />
                <include layout="@layout/layout_tv_payee" />
                <include layout="@layout/layout_tv_staff" />
                <include layout="@layout/layout_tv_branch" />
                <include layout="@layout/layout_tv_project" />
            </cn.cash360.tiger.widget.AutoWrapViewGroup>
            <include layout="@layout/layout_audit_status" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@id/layout_save" android:paddingLeft="@dimen/border_padding_left_right" android:paddingTop="@dimen/border_padding_top_bottom" android:paddingRight="@dimen/border_padding_left_right" android:paddingBottom="@dimen/border_padding_top_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textColor="#fffe7d7d" android:id="@id/btn_delete" android:background="@drawable/selector_btn_white" android:text="撤销" android:layout_alignParentBottom="true" style="@style/btn_item" />
    </LinearLayout>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@id/container_calculator" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" />
</LinearLayout>