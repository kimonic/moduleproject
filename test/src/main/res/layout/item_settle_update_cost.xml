<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/ll_root_view" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:paddingTop="@dimen/dp_8" android:paddingBottom="@dimen/dp_8" style="@style/item_layout">
        <CheckBox android:id="@id/checkbox" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10" android:layout_centerVertical="true" style="@style/custom_checkbox_theme_rectangle" />
        <TextView android:id="@id/text_view_date" android:layout_toRightOf="@id/checkbox" android:layout_centerVertical="true" style="@style/item_text_secondary" />
        <TextView android:id="@id/text_view_id" android:layout_marginRight="@dimen/dp_5" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/item_text_secondary" />
    </RelativeLayout>
    <include layout="@layout/divide_line" />
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:id="@id/ll_layout" android:background="@drawable/selector_item_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/iv_dot" android:padding="@dimen/dp_3" android:visibility="gone" android:layout_width="@dimen/dp_30" android:layout_height="fill_parent" android:src="@drawable/shape_circle_red" android:scaleType="centerInside" />
            <LinearLayout android:orientation="vertical" android:padding="@dimen/dp_14" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <RelativeLayout android:padding="@dimen/dp_0" style="@style/item_layout">
                    <TextView android:textColor="@color/tv_color_main_text" android:id="@id/tv_name" style="@style/item_text_secondary" />
                    <TextView android:id="@id/tv_amount" android:layout_marginRight="@dimen/dp_25" android:layout_alignParentRight="true" style="@style/item_text_secondary" />
                </RelativeLayout>
                <RelativeLayout android:padding="@dimen/dp_0" style="@style/item_layout">
                    <TextView android:id="@id/tv_detail" style="@style/item_text_secondary" />
                    <TextView android:id="@id/tv_podo_type" android:layout_marginRight="@dimen/dp_25" android:layout_alignParentRight="true" style="@style/item_text_secondary" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@id/iv_arrow" android:layout_marginRight="@dimen/dp_15" style="@style/item_arrow_right" />
    </RelativeLayout>
    <View android:background="@color/background_app" android:layout_width="fill_parent" android:layout_height="@dimen/dp_10" />
</LinearLayout>