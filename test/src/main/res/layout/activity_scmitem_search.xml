    <include layout="@layout/image_divider" />
    <RelativeLayout android:id="@id/layout_code" style="@style/item_layout_edit">
        <TextView android:id="@id/text_view_code" android:text="货品编码" style="@style/item_text_view_left" />
        <EditText android:id="@id/edit_text_code" android:layout_toRightOf="@id/text_view_code" style="@style/item_edit_right" />
    </RelativeLayout>
</LinearLayout>