            <TextView android:id="@id/text_view_date" style="@style/item_text_right_clickable" />
        </RelativeLayout>
        <include layout="@layout/image_divider" />
        <RelativeLayout android:id="@id/layout_start_time" style="@style/item_layout">
            <TextView android:text="开始日期" style="@style/item_text_view_left" />
            <TextView android:id="@id/text_view_start_time" style="@style/item_text_right_clickable" />
