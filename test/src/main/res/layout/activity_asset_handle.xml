<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/background_app" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/title_toolbar" />
    <ScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_marginBottom="@dimen/dp_15" android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <RelativeLayout android:id="@id/layout_money" android:visibility="gone" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/item_layout">
                <TextView android:textSize="27.0sp" android:textStyle="bold" android:id="@id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_name" android:text="名称" style="@style/item_text_view_left" />
                <TextView android:textColor="@color/text_view_black" android:id="@id/et_asset_name" android:layout_toRightOf="@id/tv_asset_name" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_amount" android:text="购置金额" style="@style/item_text_view_left" />
                <TextView android:textColor="@color/text_view_black" android:id="@id/et_asset_amount" android:layout_toRightOf="@id/tv_asset_amount" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_num" android:text="剩余数量" style="@style/item_text_view_left" />
                <TextView android:textColor="@color/text_view_black" android:id="@id/et_asset_num" android:layout_toRightOf="@id/tv_asset_num" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_asset_unit_cost" android:text="累计折旧" style="@style/item_text_view_left" />
                <TextView android:id="@id/tv_depreciation_total" android:layout_toRightOf="@id/tv_asset_unit_cost" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <View android:background="@color/background_app" android:layout_width="fill_parent" android:layout_height="@dimen/dp_18" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_handle_num" android:text="处置数量" style="@style/item_text_view_left" />
                <cn.cash360.tiger.widget.edittext.EditTextWithDel android:id="@id/et_handle_num" android:layout_toRightOf="@id/tv_handle_num" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_sale_amount" android:text="出售金额" style="@style/item_text_view_left" />
                <cn.cash360.tiger.widget.edittext.EditTextWithDel android:textColor="@color/amount_red" android:id="@id/et_sale_amount" android:layout_toRightOf="@id/tv_sale_amount" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout android:id="@id/layout_account" style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_account_name" android:text="收款账户" style="@style/item_text_view_left" />
                <TextView android:gravity="right" android:id="@id/tv_account" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_6" android:layout_toLeftOf="@id/iv_account" android:layout_toRightOf="@id/tv_account_name" style="@style/text_view_tally_item" />
                <ImageView android:id="@id/iv_account" style="@style/item_arrow_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_p_l" android:text="处置盈亏" style="@style/item_text_view_left" />
                <TextView android:textColor="@color/amount_red" android:textColorHint="@color/textColorGray" android:id="@id/et_p_l" android:hint="点击自动计算盈亏" android:layout_toRightOf="@id/tv_p_l" style="@style/asset_item_edit_right" />
            </RelativeLayout>
            <include layout="@layout/image_divider" />
            <RelativeLayout android:id="@id/layout_category" style="@style/item_layout">
                <TextView android:textColor="@color/text_view_grey" android:id="@id/tv_category_name" android:text="盈亏类别" style="@style/item_text_view_left" />
                <TextView android:gravity="right" android:id="@id/tv_category" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_6" android:layout_toLeftOf="@id/iv_category" android:layout_toRightOf="@id/tv_category_name" style="@style/text_view_tally_item" />
                <ImageView android:id="@id/iv_category" style="@style/item_arrow_right" />
            </RelativeLayout>
            <include layout="@layout/include_tally_remark_photo" />
            <cn.cash360.tiger.widget.AutoWrapViewGroup style="@style/AutoWrapViewGroupStyle">
                <include layout="@layout/layout_tv_date" />
                <include layout="@layout/layout_tv_payee" />
                <include layout="@layout/layout_tv_staff" />
                <include layout="@layout/layout_tv_branch" />
                <include layout="@layout/layout_tv_project" />
            </cn.cash360.tiger.widget.AutoWrapViewGroup>
        </LinearLayout>
    </ScrollView>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <include layout="@layout/layout_bt_save" />
    </FrameLayout>
</LinearLayout>