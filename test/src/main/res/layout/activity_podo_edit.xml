                <cn.cash360.tiger.widget.AutoWrapViewGroup style="@style/AutoWrapViewGroupStyle">
                    <include layout="@layout/layout_tv_staff" />
                    <include layout="@layout/layout_tv_branch" />
                    <include layout="@layout/layout_tv_project" />
                </cn.cash360.tiger.widget.AutoWrapViewGroup>
                <include layout="@layout/layout_audit_status" />
            </LinearLayout>
        </ScrollView>
        <include layout="@layout/layout_bt_delete" />
        <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@id/layout_num_input" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </RelativeLayout>
