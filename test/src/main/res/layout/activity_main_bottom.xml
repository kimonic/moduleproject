<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_bottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/tab_home_page"
        style="@style/home_page_bottom_layout_style">

        <ImageView
            android:id="@id/iv_tab_home_page"
            style="@style/bottom_iv_layout_style"
            android:src="@drawable/selector_tab_homepage" />

        <TextView
            android:id="@id/tv_tab_home_page"
            style="@style/bottom_tv_layout_style"
            android:text="记账" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/tab_scm"
        style="@style/home_page_bottom_layout_style">

        <ImageView
            android:id="@id/iv_tab_scm"
            style="@style/bottom_iv_layout_style"
            android:src="@drawable/selector_tab_scm" />

        <TextView
            android:id="@id/tv_tab_scm"
            style="@style/bottom_tv_layout_style"
            android:text="库存" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/tab_tax"
        style="@style/home_page_bottom_layout_style">

        <ImageView
            android:id="@id/iv_tab_tax"
            style="@style/bottom_iv_layout_style"
            android:src="@drawable/selector_tab_tax" />

        <TextView
            android:id="@id/tv_tab_tax"
            style="@style/bottom_tv_layout_style"
            android:text="报表" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/tab_opz"
        style="@style/home_page_bottom_layout_style">

        <ImageView
            android:id="@id/iv_tab_opz"
            style="@style/bottom_iv_layout_style"
            android:src="@drawable/selector_tab_opz" />

        <TextView
            android:id="@id/tv_tab_opz"
            style="@style/bottom_tv_layout_style"
            android:text="报税·办事" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@id/tab_plus"
            style="@style/home_page_bottom_layout_style"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@id/iv_tab_plus"
                style="@style/bottom_iv_layout_style"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_tab_mine" />

            <TextView
                android:id="@id/tv_tab_plus"
                style="@style/bottom_tv_layout_style"
                android:text="发现" />
        </LinearLayout>

        <ImageView
            android:id="@id/iv_msg_is_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="2.0dip"
            android:src="@drawable/message_unread"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>